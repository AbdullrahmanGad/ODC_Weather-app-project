pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('my_repo12345') 
    }

    stages {
        stage('Checkout') {
            steps {
                // Pulling code from Git repo.
                git credentialsId: 'AbdullrahmanGad12345', url: 'https://github.com/AbdullrahmanGad/ODC_project.git', branch: 'main'
                sh "ls -l ${WORKSPACE}"  // Verify the workspace contents
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build Docker image
                    dockerImage = docker.build("abdelrahmangad275/weather_app:1.0.0")
                }
            }
        }

        stage('Pushing Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'my_repo12345') {
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    echo "Running Ansible Playbook"

                    // Setting permissions for private keys
                    sh "chmod 600 ${WORKSPACE}/private_key1"
                    sh "chmod 600 ${WORKSPACE}/private_key2"
                    export ANSIBLE_HOST_KEY_CHECKING = 'False'
			
                    // Run Ansible playbook
                    sh "ansible-playbook -i inventory playbook.yaml"
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
